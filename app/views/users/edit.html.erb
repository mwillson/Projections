<% provide(:title, 'Edit user') %>
<h2 class="center">Update your profile</h2>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
      <%= render 'form', f:f %>
      <%= f.submit "Save changes", class: "btn btn-large" %>
    <% end %>
    <%= gravatar_for @user %>
    <a href="http://gravatar.com/emails">change</a>
  </div>
</div>

