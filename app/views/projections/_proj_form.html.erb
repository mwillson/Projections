<div class="row">
  <div class="span6 offset3">
    <%= form_for(@projection) do |f| %>

      <%= render 'shared/error_messages', object: f.object %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :category %>
      <%= f.select( :category, [['Song','Song'],['Film','Film'],['Static Visual','Static']]) %>

      <%= f.label :description %>
      <%= f.text_area :description %>

      <%= f.label :file %>
      <%= f.file_field :file %>

      <%= f.submit "Create", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>

